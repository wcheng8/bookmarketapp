<%=image_tag @book.picture, width: '200' if @book.picture.attached? %>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>
<div>
  <p>Genre</p>
  <%@book.genres.each do |b|%>
    <%= b.genre %>
  <% end %>
</div>
<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Context:</strong>
  <%= @book.context %>
</p>

<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
